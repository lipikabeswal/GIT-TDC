	<project name="ItemViewer" default="ItemViewer" basedir=".">

	
    <property name="src"   value="${basedir}/src"/>
	<property name="webappDir" value="../webapp"/>
	
    <property environment="env"/>
    <property name="lzbin" value="${env.LPS_HOME}/WEB-INF/lps/server/bin"/>

    <!-- use the correct compiler script based on platform -->
    <condition property="lzc" value="${lzbin}/lzc">
        <os family="unix"/>
    </condition>

    <condition property="lzc" value="${lzbin}/lzc.bat">
        <os family="windows"/>
    </condition>

    <property name="ItemViewer.lzx" value="${basedir}/src/ItemViewer.lzx"/>
    <property name="ItemViewer.swf" value="${basedir}/src/ItemViewer.swf"/>
    <property name="ItemViewer.lzx.swf" value="${ItemViewer.lzx}.swf"/>
    <property name="ctbmodules" value="${basedir}/src/ctbmodules"/>
    <property name="lzmodules" value="${basedir}/src/lzmodules"/>


	
    <target name="ItemViewer" description="compile ItemViewer.lzx">
    	<echo message="${lzc}"/>
        <exec executable="${lzc}" failonerror="true">
            <arg value="${ItemViewer.lzx}"/>
        	<arg value='"--runtime=swf8"'/>
        </exec>
        <copy file="${ItemViewer.lzx.swf}" todir="${webappDir}"/>
        <delete file="${ItemViewer.swf}"/>
        <delete file="${ItemViewer.lzx.swf}"/>
    </target>

    <target name="Debug" description="update files on webapp folder from tdc/src">
    	<unzip src="${basedir}/../openlaszlo-3.3.3-servlet.war" dest="${webappDir}">    		
    		<patternset>
    			<exclude name="**/WEB-INF/web.xml"/>
    			<exclude name="**/META-INF/MANIFEST.MF"/>
    			<exclude name="**/my-apps/copy-of-hello.lzx"/>
    		</patternset>
    	</unzip>
    	<copy file="${ItemViewer.lzx}" todir="${webappDir}" overwrite="false"/>
        <copy file="${basedir}/../etc/proxy.properties" todir="${webappDir}/WEB-INF/classes" overwrite="false"/>
 
    	<copy file="${basedir}/../webLZDebug.xml" tofile="${webappDir}/WEB-INF/web.xml" overwrite="true" />
    	<copy file="${webappDir}/tutorial.html" tofile="${webappDir}/debug.html" overwrite="true" />
		<replace file="${webappDir}/debug.html">
			<replacetoken><![CDATA[lzEmbed({url: 'ItemViewer.lzx.swf?lzt=swf&folder=calif&servletUrl=http://127.0.0.1:12345/servlet/fixed&eliminatorResource=resources/eliminator.swf&__lzhistconn='+top.connuid+'&__lzhisturl=' + escape('includes/h.html?h='), bgcolor: '#6691B4"',  width: '100%', height: '100%'});]]></replacetoken>
			<replacevalue><![CDATA[lzEmbed({url: 'ItemViewer.lzx?debug=true&lzt=swf&folder=calif&servletUrl=http://127.0.0.1:12345/servlet/fixed&eliminatorResource=resources/eliminator.swf&__lzhistconn='+top.connuid+'&__lzhisturl=' + escape('includes/h.html?h='), bgcolor: '#6691B4"',  width: '100%', height: '100%'});]]></replacevalue>
		</replace>
    	
    	<copy todir="${webappDir}/ctbmodules" overwrite="true">
        	<fileset dir="${ctbmodules}"></fileset>
        </copy>
        <copy todir="${webappDir}/lzmodules" overwrite="false">
			<fileset dir="${lzmodules}"></fileset>
        </copy>

    	

    </target>

	<target name="help" description="describes usage">
        <echo>
Usage:

ant ItemViewer             compile, copy to standalone, 

ant help             print this message
        </echo>
    </target>

</project>