<library>

    <class name="BaseManipulative"
           visible="true">

        <datapath/>

        <attribute name="toolid" type="string"/>
           
        <handler name="oninit">
            this.datapath.setXPath (this.toolid);
            var elem = this.getDisplayObject();
            elem.setAttribute('id', toolid);
        </handler>

        <handler name="onvisible">
            if (this.visible){
            	this.bringToFront ();
            }
            else{
            	canvas.removeManipulative(this.toolid);
            }
        </handler>

		<method name="bringToFront">
			super.bringToFront();
			canvas.sendToFront(this.toolid);
		</method>
		
		<method name="hide">
			this.setAttribute('visible', false);
		</method>
		
		<method name="show">
			this.setAttribute('visible', true);
		</method>

		
    </class>
</library>
